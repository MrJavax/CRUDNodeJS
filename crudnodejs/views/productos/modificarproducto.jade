extends ../default

block content

  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
      h1(class=['ui', 'header', 'blue', 'dividing'])= 'Modificar Producto'

      div(class='form-nuevoproducto')
        form(class=['ui', 'form'] action='/modificar' method='post')
          div(class=['ui', 'field'])
            input(type='hidden' name='cod' value=productos[0].cod_pro)
          div(class=['ui', 'field'])
            label(for='nombre')= 'Nombre de Producto'
            input(type='text' name='nombre' placeholder='Ingrese Producto' value=productos[0].nom_pro)
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='precio')= 'Precio'
              input(type='text' name='precio' placeholder='Ingrese Precio' value=productos[0].pre_pro)
            div(class=['ui', 'field'])  
              label(for='stock')= 'Stock'
              input(type='text' name='stock' placeholder='Ingrese Stock' value=productos[0].stk_pro)
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for="categoria")= 'Categoría'
              input(type='text' name='categoria' placeholder='Ingrese Categoría' value=productos[0].cat_pro)
            div(class=['ui', 'field'])
              label(for='fecha')= 'Fecha'
              input(type='Date' name='fecha' value=productos[0].fec_reg_pro)
          button(class=['ui', 'button', 'basic', 'black'])= 'Modificar'
          div(class=['ui', 'message', 'error'])

  script(src='/javascripts/productoval.js')