extends ../default

block content

  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
      h1(class=['ui', 'header', 'blue', 'dividing'])= 'Nuevo Producto'

      div(class='form-nuevoproducto')
        form(class=['ui', 'form'] action='/crearproducto' method='post')
          div(class=['ui', 'field'])
            label(for='nombre')= 'Nombre de Producto'
            input(type='text' name='nombre' placeholder='Ingrese Producto')
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='precio')= 'Precio'
              input(type='text' name='precio' placeholder='Ingrese Precio')
            div(class=['ui', 'field'])  
              label(for='stock')= 'Stock'
              input(type='text' name='stock' placeholder='Ingrese Stock')
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for="categoria")= 'Categoría'
              input(type='text' name='categoria' placeholder='Ingrese Categoría')
            div(class=['ui', 'field'])
              label(for='fecha')= 'Fecha'
              input(type='Date' name='fecha')
          button(class=['ui', 'button', 'basic', 'black'])= 'Registrar'
          div(class=['ui', 'message', 'error'])

      if info != undefined
        div(class=['ui', 'message', 'success'])
          i(class=['close', 'icon'])
          div(class='header')= 'Información :'
            p= info
  script(src='/javascripts/productoval.js')